<%= form_for(a) do |f| %>
  <% if a.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% a.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :redirect, params[:redirect] %>
  <%= f.hidden_field :course_id %>

  <% if @lesson %>
    <%= hidden_field_tag :lesson_id, params[:lesson_id] %>
    <%= hidden_field_tag :in_class, params[:in_class] %>

  <% else %>
    <%= f.label :name do %>
      <span class="field-label">Name</span> <%= f.text_field :name, required: true %>
    <% end %>

    <%= f.label :active_at do %>
      <span class="field-label">Open Date/Time</span> <%= f.text_field :active_at, required: true, value: db_datetime_string(a.active_at) %>
      <span class="help-inline"><input type="date" /></span>
    <% end %>

    <%= f.label :due_at do %>
      <span class="field-label">Due Date/Time</span> <%= f.text_field :due_at, required: true, value: db_datetime_string(a.due_at) %>
      <span class="help-inline"><input type="date" /></span>
    <% end %>
  <% end %>
  <div class="actions">
    <%= f.submit "Save Assignment and Questions", class: "btn" %>
  </div>
<% end %>
